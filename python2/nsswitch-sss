#!/bin/bash
verbose=0
action=''

nsswitch_sss_modify() {
	local enable="$1"
	if [ $enable -eq 0 ]; then
		/usr/bin/nsswitch-config \
			--set passwd files \
			--set group files \
			--set shadow files \
			--set netgroup files \
			--set services db files \
			--set sudoers files
		RES=$?
	else
		/usr/bin/nsswitch-config \
			--set passwd files sss \
			--set group files sss \
			--set shadow files sss \
			--set netgroup files sss \
			--set services db files sss \
			--set sudoers files sss
		RES=$?
	fi
	if [ $RES -ne 0 ]; then
		echo "Failed to modify nsswitch.conf" 1>&2
	fi
}

function usage()
{
	echo "nsswitch-sss [OPTIONS] <enable|disable>"
	echo "    -h, --help      shows this help screen"
	echo "    -v,--verbose    verbose output"
	echo "    enable          enables the nss-ldap lookup"
	echo "    disable         disables the nss-ldap lookup"
	exit 0
}

# parse command line arguments
while [ $# -ne 0 ]; do
	case "$1" in
		"-?"|"-h"|"--help") usage;;
		"enable"|"disable") action="$1"; ;;
		*)
			echo "Unknown parameter $1" 1>&2
			exit 1
		;;
	esac
	shift
done

if [ -z "$action" ]; then
	echo "Neither 'enable' nor 'disable' is specified.'" 1>&2
	exit 1
else
	case "$action" in
		'enable') nsswitch_sss_modify 1; ;;
		'disable') nsswitch_sss_modify 0; ;;
	esac
fi
